<div class="hoge">
  <h2 style="padding:20px;"> <%= @user.nickname %>'s page </h2>
  <%= render "follow_button" %>
  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <a class="nav-item nav-link active" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="true">All Tweets</a>
      <a class="nav-item nav-link" id="nav-tweets-tab" data-toggle="tab" href="#nav-tweets" role="tab" aria-controls="nav-tweets" aria-selected="false">Tweets</a>
      <a class="nav-item nav-link" id="nav-friends-tab" data-toggle="tab" href="#nav-friends" role="tab" aria-controls="nav-friends" aria-selected="false">Friends</a>
    </div>
  </nav>
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" style="padding:2em;">
      <%= render "users/profile", user: @user %>
    </div>
    <div class="tab-pane fade" id="nav-tweets" role="tabpanel" aria-labelledby="nav-tweets-tab" style="padding:2em;">
      <%= render "tweets/tweets_list", tweets: @user.tweets %>
    </div>
    <div class="tab-pane fade" id="nav-friends" role="tabpanel" aria-labelledby="nav-friends-tab" style="padding:2em;">
      <h3> <%= @user.nickname %>'s followings </h3>
        <div class="button_center">
          <% unless @current_user.followings.empty? %>
            <ul class="horizontal-list">
              <% @current_user.followings.each do |user| %>
                <%= render "follow_user", user: user %>
              <% end %>
            </ul>
          <% end %>
        </div>
      <h3> <%= @user.nickname %>'s followers </h3>
      <div class="button_center">
        <% unless @current_user.followers.empty? %>
          <ul class="horizontal-list">
            <% @current_user.followers.each do |user| %>
              <%= render "follow_user", user: user %>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
  <a class="btn btn-outline-primary" href="/tweets" role="button">Go To Top</a>
</div>
