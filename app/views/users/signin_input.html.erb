<div class="hoge">
    <div class="sign_up_form">
        <h2>Sign In</h2>
        <%= form_with(model: @user, local: true, url: users_signin_path) do |form| %>
            <div class="form-group">
                <%= form.label :email, for: "exampleInputEmail1" %>
                <%= form.text_field :email, class: "form-control", id: "xampleInputEmail1", placeholder: "Enter Email" %>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <%= form.label :password, for: "exampleInputPassword1" %>
                <%= form.text_field :password, type: "password", class: "form-control", id: "exampleInputPassword1", placeholder: "Enter Password" %>
            </div>
            <%= form.submit class: "btn btn-primary", value: "Sing In"%>
            <br>
            <br>
            <a class="btn btn-outline-primary" href="/users/signup" role="button">Sign Up</a>
        <% end %>
    </div>
</div>