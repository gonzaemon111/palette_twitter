<% unless @reply_tweets.empty?%>
  <% @reply_tweets.each do |reply_tweet| %>
    <li class="list_item">
      <%# <a href="#" class="badge badge-primary"></a> %>
      <h5>
        <% if reply_tweet.user_id == @current_user.id %>
          <a href="/users/<%= reply_tweet.user_id %>" class="badge badge-info" style="color:white;">
            <%= User.find(reply_tweet.user_id).nickname %>
          </a>
        <% else %>
          <a href="/users/<%= reply_tweet.user_id %>" class="badge badge-secondary" style="color:white;">
            <%= User.find(reply_tweet.user_id).nickname %>
          </a>
        <% end %>
      </h5>
      <a href="/tweets/<%= reply_tweet.id%>" class="list-group-item list-group-item-action flex-column align-items-start">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><%= reply_tweet.content %></h5>
          <small><%= reply_tweet.updated_at %></small>
        </div>

        <br>
        <% if reply_tweet.image %>
          <%= image_tag reply_tweet.image[:original].url %>
        <% end %>
      </a>
    </li>
  <% end %>
<% end %>