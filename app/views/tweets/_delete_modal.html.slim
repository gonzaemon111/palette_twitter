#deleteTweetModal.modal.fade[tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"]
  .modal-dialog[role="document"]
    .modal-content
      .modal-header
        h5#exampleModalLabel.modal-title
          |
          = I18n.t("views.modal.tweet.delete.title")
        button.close[type="button" data-dismiss="modal" aria-label="Close"]
          span[aria-hidden="true"]
            | Ã—
      .modal-body
        |
        = I18n.t("views.modal.tweet.delete.body")
      .modal-footer
        button.btn.btn-secondary[type="button" data-dismiss="modal"]
          |
          = I18n.t("views.modal.tweet.delete.close_btn")
        = link_to I18n.t("views.modal.tweet.delete.delete_btn"), tweet_path(tweet), method: :delete, role: "button", class: "btn btn-danger"
