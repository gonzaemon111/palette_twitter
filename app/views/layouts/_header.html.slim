#exampleModal.modal.fade[tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"]
  .modal-dialog[role="document"]
    .modal-content
      .modal-header
        h5#exampleModalLabel.modal-title
          |
          = I18n.t("views.modal.logout.title")
        button.close[type="button" data-dismiss="modal" aria-label="Close"]
          span[aria-hidden="true"]
            | Ã—
      .modal-body
        |
        = I18n.t("views.modal.logout.body")
      .modal-footer
        button.btn.btn-secondary[type="button" data-dismiss="modal"]
          |
          = I18n.t("views.modal.logout.close_btn")
        = link_to I18n.t("views.modal.logout.logout_btn"), signout_users_path, method: :delete, role: "button", class: "btn btn-danger"
nav.navbar.navbar-expand-lg.navbar-light.bg-info
  a.navbar-brand[href="/" style="color:white;"]
    | PaletteTwitter
  button.navbar-toggler[type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation"]
    span.navbar-toggler-icon
  #navbarText.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item.active

    span.navbar-text
      - if @current_user
        .btn-group
          button.btn.btn-primary.dropdown-toggle[type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"]
            = @current_user.nickname
          .dropdown-menu
            |  <a class="dropdown-item" href="/users/
            = @current_user.id
            | ">
            = I18n.t("views.header_nav.my_page_btn")
            a.dropdown-item[href="/tweets/new"]
              |
              = I18n.t("views.header_nav.tweet_new_btn")
            .dropdown-divider
            button.dropdown-item[type="button" data-toggle="modal" data-target="#exampleModal"]
              |
              = I18n.t("views.header_nav.logout_btn")
      - else
        a.btn.btn-primary[role="button" style="color:white;" href="/users/signin"]
          |  SignIn 
